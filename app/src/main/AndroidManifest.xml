<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.billy.mvvm_sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SimpleActivity" />
        <activity
            android:name=".activities.TwoWayActivity"
            android:label="@string/title_activity_two_way"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ListActivity"
            android:label="@string/title_activity_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.LambdaActivity"
            android:label="@string/title_activity_lambda_actifity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ExpressionActivity"
            android:label="@string/title_activity_expression"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.AnimationActivity"
            android:label="@string/title_activity_animation"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>